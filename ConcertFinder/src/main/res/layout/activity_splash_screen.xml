<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="pl.javaparty.concertfinder.SplashScreen" android:id="@+id/ut">


    <com.facebook.widget.LoginButton
            android:id="@+id/authButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PomiÅ„"
            android:id="@+id/skipBtn" android:layout_below="@+id/authButton" android:layout_alignLeft="@+id/authButton"
            android:layout_alignStart="@+id/authButton" android:layout_alignRight="@+id/authButton" android:layout_alignEnd="@+id/authButton"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splashbg"
            android:scaleType="fitEnd" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

</RelativeLayout>
