<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="pl.javaparty.concertfinder.SplashScreen"
                android:id="@+id/ut"
                android:background="#E8EAF6" android:gravity="bottom">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/splashbg"
            android:scaleType="fitEnd"/>

    <com.facebook.widget.LoginButton
            android:id="@+id/authButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/imageView" android:layout_alignStart="@+id/imageView"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>

</RelativeLayout>
