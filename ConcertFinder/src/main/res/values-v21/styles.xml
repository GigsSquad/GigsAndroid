<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark">

        <item name="android:textColorPrimary">@color/very_light_red</item>
        <item name="android:textColorSecondary">@color/very_light_red</item>
        <item name="android:textColorTertiary">@color/very_light_red</item>
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/dark</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/dark</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Theme.Holo">
        <item name="android:textColor">@color/very_light_red</item>
        <item name="android:background">@color/dark</item>
        <item name="android:colorActivatedHighlight">@color/very_light_red</item>
        <item name="android:textColorHighlight">@color/very_light_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
